<div>
  <% if logged_in? %>
    <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="entry_form">
        <%= render 'shared/entry_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <div class="entry_style">Post list</div>
      <%= render 'shared/feed' %>
    </div>
    </div>
  <% else %>
  <%= link_to t("btn_signup"), signup_path, class: "btn btn-lg btn-primary" %>
  <% end %>
</div>

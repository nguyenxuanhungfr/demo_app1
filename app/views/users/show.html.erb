<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %> </br>
        <hr>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
        <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
  <%= render 'follow_form' if logged_in? %>
  <% if @user.entries.any? %>
    <div class="entry_style">Entries</div>
    <ol class="entries">
      <%= render @entries %>
    </ol>
    <%= will_paginate @entries %>
  <% end %>
  </div>
</div>
